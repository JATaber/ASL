{%  extends 'navigation.html.twig' %}
{% block body %}
    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <form>
                    <h2>Register</h2>
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword.first) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword.second) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>

{% endblock %}