extend layout
block content
  .container
    .jumbtron
      form(action='/submit' method='post')
        .form-group
          label(for='name') Name
          input#name.form-control(type='text', name='email', placeholder='Enter Name')
        .form-group
          label(for='email') Email
          input#email.form-control(type='email', name='email', placeholder='name@example.com')
        .form-group
          label(for='password') Password
          input#password.form-control(type='email', name='password', placeholder='Enter Password')
        button.btn.btn-primary(type='submit') Sign up
